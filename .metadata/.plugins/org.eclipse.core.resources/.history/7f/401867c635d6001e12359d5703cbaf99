<script>
   function checkpalindrome()
   {
	   let str=document.getElementById("palindrome").value;
	   
	   let rev="";
	   
	   for(let i=str.length-1;i>=0;i--)
		   
		   rev+=str[i];
	   if(str==rev)
		   alert("palindrome")
		else
			alert("not palindrome")
		   	   
   }
</script>

<title>Insert title here</title>
</head>
<body bgcolor="biege" align="center">
    <form>
    <label>enter palindrome:</label>
    <input type="text" id="palindrome">
    <br><br>
    <button type="button" onclick="chechpalindrome()">check palindrome</button>
    </form>

</body>
